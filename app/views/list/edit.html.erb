<div class="new-form-container">
  <h1>Edit List</h1>
  
      <%= form_with model: @list, local: true do |form|  %>
      
        <% if @list.errors.any? %>
          <div id="error_explanation">
            <h2>
              <%= pluralize(@list.errors.count, "error") %> prohibited
              this list from being saved:
            </h2>
            <ul>
              <% @list.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
      
        <div>
          <%= form.label :title %><br>
          <%= form.text_field :title, class:"input-field" %>
        </div>
      
        <div>
          <%= form.label :description %><br>
          <%= form.text_area :description, class:"input-field" %>
        </div>
      
        <div class="submit-btn">
          <%= form.submit %>
        </div>
      
      <% end %>
      
      <%= link_to 'Back', list_index_path %>
</div>