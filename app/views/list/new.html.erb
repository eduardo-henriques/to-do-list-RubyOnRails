<h1>New list of to-do</h1>

    <%= form_with scope: :list, url: list_index_path, local: true do |form| %>
      <div>
        <%= form.label :title %><br>
        <%= form.text_field :title %>
        <% @list.errors.full_messages_for(:title).each do |message| %>
          <div><%= message %></div>
        <% end %>
      </div>
    
      <div>
        <%= form.label :description %><br>
        <%= form.text_area :description %>
        <% @list.errors.full_messages_for(:description).each do |message| %>
          <div><%= message %></div>
        <% end %>
      </div>
    
      <div>
        <%= form.submit %>
      </div>
    <% end %>