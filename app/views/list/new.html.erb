<div class="new-form-container">
  <h1 class="new-list-title">New list of to-do</h1>

      <%= form_with scope: :list, url: list_index_path, local: true do |form| %>
        <div>
          <%= form.label :title %><br>
          <%= form.text_field :title, class:"input-field" %>
          <% @list.errors.full_messages_for(:title).each do |message| %>
            <div><%= message %></div>
          <% end %>
        </div>
      
        <div class="mb-3">
          <%= form.label :description %><br>
          <%= form.text_area :description, class:"input-field" %>
          <% @list.errors.full_messages_for(:description).each do |message| %>
            <div><%= message %></div>
          <% end %>
        </div>
      
        <div class= "submit-btn">
          <%= form.submit %>
        </div>
      <% end %>
</div>

<button type="button" class="btn btn-outline-secondary"><%= link_to 'Back', list_index_path, class:"notlinker" %></button>