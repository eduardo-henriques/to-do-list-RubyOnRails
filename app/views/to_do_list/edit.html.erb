<h1>Edit to do</h1>
 
<%= form_with model: @todo, local: true do |form|  %>

  <% if @todo.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@todo.errors.count, "error") %> prohibited
        this todo from being saved:
      </h2>
      <ul>
        <% @todo.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>
 
  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :priority %><br>
    <%= form.select :priority, ["Low", "Medium", "High"] %>
  </div>

  <div>
    <%= form.label :done %><br>
    <%= form.radio_button :done, "true" %>
    <%= form.label :done, "Completed" %>
    <%= form.radio_button :done, "false" %>
    <%= form.label :age, "Not started" %>
  </div>
 
  <div>
    <%= form.submit %>
  </div>
 
<% end %>
 
<%= link_to 'Back', to_do_list_index_path %>