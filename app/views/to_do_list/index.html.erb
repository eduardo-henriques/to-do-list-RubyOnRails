<h1>To do List</h1>

<table class = 'table table-hover'>
  <thead>
    <tr>
      <th> Name</th>
      <th> Description</th>
      <th> Completed </th>
      <th colspan='2'></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>

      <% if todo.done %>

      <tr class='table-secondary'>
        <td class='striker'><%= link_to todo.name, list_to_do_list_path(todo.list_id,todo.id), class:"notlinker" %></td>
        <td><%=todo.description%></td>
        <td>Completed</td>
        <td><button type="button" class="btn btn-outline-warning"><%= link_to "Edit", edit_list_to_do_list_path(todo.list_id,todo.id), class:"notlinker" %></button></td>
        <td>
        <button type="button" class="btn btn-outline-danger"><%= link_to "Delete", list_to_do_list_path(todo.list_id,todo.id), method: :delete, data: {confirm: "Você tem certeza?"}, class:"notlinker"%></button>
        </td>
      </tr>

      <%else%>
      <tr>
        <td><%= link_to todo.name, list_to_do_list_path(todo.list_id,todo.id), class:"notlinker" %></td>
        <td><%=todo.description%></td>
        <td>Unfinished</td>
        <td><button type="button" class="btn btn-outline-warning"><%= link_to "Edit", edit_list_to_do_list_path(todo.list_id,todo.id), class:"notlinker" %></button></td>
        <td>
        <button type="button" class="btn btn-outline-danger"><%= link_to "Delete", list_to_do_list_path(todo.list_id,todo.id), method: :delete, data: {confirm: "Você tem certeza?"}, class:"notlinker"%></button>
        </td>
      </tr>
      <%end%>
    <% end %>
  </tbody>
</table>

<button type="button" class="btn btn-outline-success"><%= link_to "New To do", new_list_to_do_list_path, class:"notlinker"%></button>

<button type="button" class="btn btn-outline-secondary"><%= link_to "Back", list_index_path, class:"notlinker"%></button>


